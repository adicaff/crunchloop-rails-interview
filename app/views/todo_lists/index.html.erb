<div class="container">
  <div class="header">
    <h1>Todo Lists</h1>
  </div>

  <div class="form-container">
    <%= turbo_frame_tag "new_todo_list" do %>
      <%= render "form", todo_list: @todo_list %>
    <% end %>
  </div>

  <%= turbo_stream_from "todo_lists" %>
  <div id="todo_lists" class="todo-lists-grid">
    <% if @todo_lists.reject(&:new_record?).any? %>
      <%= render @todo_lists.reject(&:new_record?) %>
    <% else %>
      <div id="empty_state" class="empty-state">
        <h2>Welcome to your Todo App!</h2>
        <p>You don't have any todo lists yet. Create your first one above to get started!</p>
      </div>
    <% end %>
  </div>
</div>
