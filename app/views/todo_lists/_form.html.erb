<%= form_with(model: todo_list, class: "todo-list-form") do |form| %>
  <% if todo_list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo_list.errors.count, "error") %> prohibited this todo_list from being saved:</h2>
      <ul>
        <% todo_list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :name, placeholder: "New Todo List Name..." %>
    <%= form.submit todo_list.new_record? ? "Create" : "Update", class: "btn-primary" %>
    <% unless todo_list.new_record? %>
      <%= link_to "Cancel", todo_lists_path, class: "btn-secondary" %>
    <% end %>
  </div>
<% end %>
