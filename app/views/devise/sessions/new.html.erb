<div class="container devise-container">
  <div class="header">
    <h1>Log in</h1>
  </div>

  <div class="form-container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "todo-list-form" }) do |f| %>
      <div class="field">
        <%= f.label :username %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "Your username..." %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Your password..." %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field checkbox-field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "btn-primary" %>
      </div>
    <% end %>

    <div class="devise-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
